<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Optional: Spring Boot log config property support -->
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="DEBUG"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: logs everything to console -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Optional: Adjust log levels for specific packages -->
    <logger name="org.springframework" level="INFO" />
    <logger name="org.hibernate" level="WARN" />

</configuration>
